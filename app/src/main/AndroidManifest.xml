<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thirumathikart.customer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:largeHeap="true"
        android:name="com.thirumathikart.customer.init.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.thirumathikart.customer.AddAddressActivity"
            android:theme="@style/WhiteTheme" ></activity>
        <activity android:name="com.thirumathikart.customer.AddressSelectionActivity"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.orders.OrdersActivity"
            android:parentActivityName="com.thirumathikart.customer.MainActivity"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.SearchProductActivity"
            android:theme="@style/WhiteTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.ProductsActivity"
            android:parentActivityName="com.thirumathikart.customer.MainActivity"
            android:theme="@style/WhiteTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".prodcutscategory.SearchProductActivity" />
        </activity>
        <activity android:name="com.thirumathikart.customer.PaymentActivity" />

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_YoGexBd2dXf6GR" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="MyDatabase.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.beingdev.magicprint.db.Notification" />
        <!--
        Add the following to your AndroidManifest.xml to prevent the launching of your main Activity
        if you are calling startActivity above.
        -->
        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />

        <activity
            android:name="com.thirumathikart.customer.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thirumathikart.customer.Register"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.thirumathikart.customer.MainActivity"
            android:theme="@style/WhiteTheme">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".prodcutscategory.SearchProductActivity" />
        </activity>
        <activity
            android:name="com.thirumathikart.customer.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.thirumathikart.customer.HelpCenter"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.Profile"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.Cart"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.UpdateData"
            android:theme="@style/WhiteTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.thirumathikart.customer.ForgotPassword"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.thirumathikart.customer.NotificationActivity"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.Cards"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.IndividualProduct"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.Wishlist"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.OrderDetails"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.OrderPlaced"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.Tshirts"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.Bags"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.Calendars"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.Keychains"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.prodcutscategory.Stationary"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.thirumathikart.customer.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>