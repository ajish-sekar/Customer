<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/search_products_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/search_products_toolbarwrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_products_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:background="@color/colorAccent"
            android:minHeight="?attr/actionBarSize">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/search_products_tv_no_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_fileName="loadinganim.json"
        app:lottie_loop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:lottie_autoPlay="true"
        android:onClick="Notifications"/>

    <TextView
        android:id="@+id/search_no_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_products_toolbarwrap"
        android:text="No results were found for your search"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>


    <FrameLayout
        android:padding="5dp"
        android:layout_below="@id/search_products_toolbarwrap"
        android:id="@+id/search_frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_products_recycler_view"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </FrameLayout>

</RelativeLayout>